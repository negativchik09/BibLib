@model BookInfoViewModel
<section class="box">
    <div class="container col-6-medium">
        <div class="row gtr-uniform">
            <input type="hidden" asp-for="Id" name="Id">
            <div class="col-2 off-3" style="height:25em">
                <img src="@Model.Image" style="object-fit: fill; height:100%; width:100%" />
            </div>
            <div class="col-4" style="height:25em">
                <table border="0">
                    <tr><td><label asp-for="Title"></label></td><td>@Model.Title</td></tr>
                    <tr>
                        <td><label asp-for="Author"></label></td>
                        <td>
                            @for (int i = 0; i < @Model.Author.Count; i++)
                            {
                                if (i == @Model.Author.Count - 1)
                                {
                                    <a href="~/Home/Search?authors=@Model.Author[i].Id">@Model.Author[i].Name</a>
                                    break;
                                }
                                <a href="~/Home/Search?authors=@Model.Author[i].Id">@Model.Author[i].Name</a><strong>, </strong>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="Genre"></label></td>
                        <td>
                            @for (int i = 0; i < @Model.Genre.Count; i++)
                            {
                                if (i == @Model.Genre.Count - 1)
                                {
                                    <a href="~/Home/Search?authors=@Model.Genre[i].Id">@Model.Genre[i].Title</a>
                                    break;
                                }
                                <a href="~/Home/Search?authors=@Model.Genre[i].Id">@Model.Genre[i].Title</a><strong>, </strong>
                            }
                        </td>
                    </tr>
                    <tr><td><label asp-for="Series"></label></td><td>@Model.Series</td></tr>
                    <tr><td><label asp-for="NumberOfPages"></label></td><td>@Model.NumberOfPages</td></tr>
                </table>
                <table border="0" style="margin:0;">
                    <tr>
                        <td colspan="3" class="align-center" style="width:50%; padding:0;">
                            @if (User.IsInRole("librarian") || User.IsInRole("admin"))
                            {
                                <a asp-action="Edit" asp-controller="Book" asp-route-id="@Model.Id">Изменить</a>
                            }
                        </td>
                        <td colspan="3" class="align-center" style="width:50%; padding:0;">
                            @if (User.IsInRole("librarian") || User.IsInRole("admin"))
                            {
                                <a asp-action="Delete" asp-controller="Book" asp-route-id="@Model.Id" onclick="return confirm('Вы уверены, что хотите удалить книгу?')">Удалить</a>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6" class="align-center">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <a asp-action="AddToFavourites" asp-controller="Profile" asp-route-id="@Model.Id">Добавить в избранное</a>
                            }
                        </td>
                    </tr>
                    <tr>
                        <form asp-action="Rating" asp-controller="Book" method="post">
                            <td colspan="1" class="align-center" style="width:20%;">
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <input type="button" name="Down" class="button align-center" value="-"/>
                                }
                            </td>
                            <td colspan="4" class="align-center" style="width:60%;">
                                <label asp-for="Rating" style="display:inline;"></label>@Model.Rating
                            </td>
                            <td colspan="1" class="align-center" style="width:20%;">
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <input type="button" name="Up" class="button align-center" value="+"/>
                                }
                            </td>
                        </form>
                    </tr>
                </table>
