<!-- Header -->
<header id="header">
    <a asp-action="Index" asp-controller="Home">
        <img src="~/img/logo.png" />
    </a>
    <h1><a asp-action="Index" asp-controller="Home">BibLib</a></h1>
    <nav class="links">
        <ul>
            <li>
                <form class="search" method="post" action="#">
                    <input type="text" name="query" placeholder="Search" />
                </form>
            </li>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <li><a asp-action="Profile" asp-controller="Profile">Профиль</a></li>
                <li><a asp-action="Favourites" asp-controller="Profile">Закладки</a></li>
                <li><a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a></li>
            }
            else
            {
                <li><a asp-action="Login" asp-controller="Account">Войти в аккаунт</a></li>
                <li><a asp-action="Registration" asp-controller="Account">Зарегистрироваться</a></li>
            }
        </ul>
    </nav>
</header>
