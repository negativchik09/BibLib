<section id="menu">
    <div class="menu-secondary-links" style="width:-webkit-fill-available; display:none;">
        <div class="row">
            <div class="col-9">
                <form class="search" method="post" id="searchbar" asp-action="SearchQuery" asp-controller="Home" style="margin:0">
                    <input type="text" name="query" placeholder="Поиск" />
                </form>
            </div>
            <div class="col-3">
                <input type="button" value="Искать" onclick='document.getElementById("searchbar").submit();' style="height:100%; width:100%; line-height:initial;" />
            </div>
        </div>
    </div>
    <div class="menu-secondary-links" style="display:none">
        <a class="button" asp-action="Search" asp-controller="Home">Каталог</a>
    </div>
    @if (User.IsInRole("premium") || User.IsInRole("librarian") || User.IsInRole("admin"))
    {
    <div><a class="button" asp-action="Profile" asp-controller="Profile">Профиль</a></div>
    <div><a class="button" asp-action="Bookmarks" asp-controller="Profile">Закладки</a></div>
    <div><a class="button" asp-action="Logout" asp-controller="Account" style="white-space: nowrap;">Выйти из аккаунта</a></div>
    }
    else if (User.Identity != null && User.Identity.IsAuthenticated)
    {
    <div><a class="button" asp-action="Profile" asp-controller="Profile">Профиль</a></div>
    <div><a class="button" asp-action="Bookmarks" asp-controller="Profile">Закладки</a></div>
    <div><a class="button" asp-action="Logout" asp-controller="Account" style="white-space: nowrap;">Выйти из аккаунта</a></div>
    <div><a class="button" asp-action="Premium" asp-controller="Account" style="white-space: nowrap;">Приобрести премиум</a></div>
    }
    else
    {
    <div><a class="button" asp-action="Login" asp-controller="Account" style="white-space: nowrap;">Войти в аккаунт</a></div>
    <div><a class="button" asp-action="Registration" asp-controller="Account">Зарегистрироваться</a></div>
    }
</section>