@model RegistrationViewModel
<section class="box">
    <form asp-action="Registration" asp-controller="Account" method="post">
        <div class="container col-6-medium">
            <div class="row gtr-uniform">
                <div class="col-3 off-3 col-10-medium off-1-medium">
                    <label asp-for="Email" class="align-center"></label>
                    <input asp-for="Email" class="align-center" />
                    <span asp-validation-for="Email" class="align-center"></span>
                </div>
                <div class="col-3 col-10-medium off-1-medium">
                    <label asp-for="ConfirmEmail" class="align-center"></label>
                    <input asp-for="ConfirmEmail" class="align-center" />
                    <span asp-validation-for="ConfirmEmail" class="align-center"></span>
                </div>
                <div class="col-3 off-3 col-10-medium off-1-medium">
                    <label asp-for="Password" class="align-center"></label>
                    <input asp-for="Password" type="password" class="align-center" />
                    <span asp-validation-for="Password" class="align-center"></span>
                </div>
                <div class="col-3 col-10-medium off-1-medium">
                    <label asp-for="ConfirmPassword" class="align-center"></label>
                    <input asp-for="ConfirmPassword" type="password" class="align-center" />
                    <span asp-validation-for="ConfirmPassword" class="align-center"></span>
                </div>
                <div class="col-3 off-3 col-10-medium off-1-medium">
                    <label asp-for="SecretQuestion" class="align-center"></label>
                    <select asp-for="SecretQuestion" asp-items="new SelectList(Model.ListOfSecretQuestions)"></select>
                    <span asp-validation-for="SecretQuestion" class="align-center"></span>
                </div>
                <div class="col-3 col-10-medium off-1-medium">
                    <label asp-for="Answer" class="align-center"></label>
                    <input asp-for="Answer" class="align-center" />
                    <span asp-validation-for="Answer" class="align-center"></span>
                </div>
                <div class="col-4 off-4 aln-center col-10-medium off-1-medium">
                    <input type="submit" value="Зарегистрироваться" class="button special fit" />
                </div>
            </div>
        </div>
    </form>
</section>