@model ChangePasswordFormViewModel
<section class="box">
    <form asp-action="ChangePassword" asp-controller="Account" method="post">
        <div class="container col-6-medium">
            <div class="row gtr-uniform">
                <div class="col-3 off-3">
                    <label asp-for="Password" class="align-center"></label>
                    <input asp-for="Password" type="password" class="align-center" />
                    <span asp-validation-for="Password" class="align-center"></span>
                </div>
                <div class="col-3">
                    <label asp-for="ConfirmPassword" class="align-center"></label>
                    <input asp-for="ConfirmPassword" type="password" class="align-center" />
                    <span asp-validation-for="ConfirmPassword" class="align-center"></span>
                </div>
                <div class="col-4 off-4 aln-center">
                    <input type="submit" value="Изменить пароль" class="button special fit" />
                </div>
            </div>
        </div>
    </form>
</section>